<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg1"
    tools:context=".HomePageActivity" >

    <ImageButton
        android:id="@+id/imgBtnFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/xiamu" />

    <ImageButton
        android:id="@+id/imgBtnLov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imgBtnFriends"
        android:layout_marginTop="17dp"
        android:src="@drawable/yamisese" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:layout_toLeftOf="@+id/imgBtnLife"
        android:text="点滴" />

    <ImageButton
        android:id="@+id/imgBtnLife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/imgBtnLov"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgBtnFriends"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/imgBtnFriends"
        android:text="友人帐" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgBtnLife"
        android:layout_alignTop="@+id/imgBtnLov"
        android:layout_marginTop="40dp"
        android:text="lover" />

</RelativeLayout>
